<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/_img_folders"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_folder"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/_txt_videos_count"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignBottom="@id/_img_folders"
        android:layout_alignEnd="@id/_img_folders"
        android:background="@drawable/bg_folder_count"
        android:layout_marginStart="-30dp"/>


    <TextView
        android:id="@+id/_txt_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Folder name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/_img_folders"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

</RelativeLayout>